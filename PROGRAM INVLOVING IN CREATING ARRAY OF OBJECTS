#include<iostream>
using namespace std;
class employee
{
    int id;
    string name;
    public:
    void get()
    {
        cout<<"enter the employee name and id:"<<endl;
        cin>>name>>id;
    }
    void show()
    {
        cout<<"employee name:"<<name<<endl<<"employe id:"<<id<<endl;
    }
};
int main()
{
    employee emp[30];
    int n,i;
    cout<<"enter the number of employee"<<endl;
    cin>>n;
    for (i = 0;i<n;i++)
    {
        emp[i].get();
    }
    for (i = 0;i<n;i++)
    {
        emp[i].show();
    }
    return 0;
}

