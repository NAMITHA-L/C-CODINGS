#include <iostream>
using namespace std;

int main() {
    int n, a = 0; // n for number of digits, a for the sum
    cout << "Enter number of digits you want to add: " << endl;
    cin >> n;

    cout << "Enter the numbers: " << endl;
    for (int i = 0; i < n; i++) {
        int number; // Use a separate variable to hold the input
        cin >> number;
        a += number; // Add the number to the sum
    }

    cout << "The sum is: " << a << endl; // Output the total sum
    return 0;
}
