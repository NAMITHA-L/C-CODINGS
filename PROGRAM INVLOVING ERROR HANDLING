#include<iostream>
using namespace std;
int main()
{
    double numerator,denominator,divide;
    cout<<"enter the numerator and denominator value"<<endl;
    cin>>numerator>>denominator;
    try
    {
        if(denominator==0)
        {
            throw 0;
        }
        divide = numerator/denominator;
        cout<<numerator <<" / " <<denominator<<" ="<<divide;
    }
    catch (int num_expception)
    {
        cout<<"error:cannot divide "<<num_expception<<endl;
    }
}
