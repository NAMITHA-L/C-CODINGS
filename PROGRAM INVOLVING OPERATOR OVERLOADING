#include<iostream>
using namespace std;
class animal
{
    int a;
    public:
    void get()
    {
        cout<<"enter the value"<<endl;
        cin>>a;
    }
    void show()
    {
        cout<<"the value is :"<<a<<endl;
    }
    void operator - ()
    {
        a = -a;
    }
};





int main()
{ 
    animal a;
    a.get();
    a.show();
    -a;
    a.show();
    return 0;
}
